<Page
    x:Class="SETRProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SETRProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <CheckBox Content="Localisation via GPS" HorizontalAlignment="Left" Margin="143,80,0,0" VerticalAlignment="Top"/>

        <TextBlock HorizontalAlignment="Left" Margin="60,160,0,0" Text="Ma position :" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="75,190,0,0" Text="Longitude :" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="userLongitudeTextBlock" HorizontalAlignment="Left" Margin="175,190,0,0" Text="Entrez votre longitude" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="75,220,0,0" Text="Latitude :" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="userLatitudeTextBlock" HorizontalAlignment="Left" Margin="175,220,0,0" Text="Entrez votre latitude" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Raffraichir" HorizontalAlignment="Left" Margin="1030,216,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.516,-1.188"/>

        <TextBlock x:Name="nearestMoteNameTextBlock" HorizontalAlignment="Left" Margin="60,360,0,0" Text="Nom du mote le plus proche :" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="nearestMotePlaceTextBlock" HorizontalAlignment="Left" Margin="60,380,0,0" Text="Salle du mote le plus proche :" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="75,410,0,0" Text="Longitude" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="nearestMoteLongitudeTextBlock" HorizontalAlignment="Left" Margin="175,410,0,0" Text="longitude du mote le plus proche" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="75,440,0,0" Text="Latitude" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="nearestMoteLatitudeTextBlock" HorizontalAlignment="Left" Margin="175,440,0,0" Text="latitude du mote le plus proche" TextWrapping="Wrap" VerticalAlignment="Top"/>


        <TextBlock x:Name="errorTextBlock" HorizontalAlignment="Left" Margin="175,650,0,0" Text="message d'erreur" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Page>
